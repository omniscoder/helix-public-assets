{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://omniscoder.github.io/Helix/schemas/enzyme/helix_enzyme_policy_v1.json",
  "title": "Helix Enzyme Policy v1",
  "type": "object",
  "additionalProperties": false,
  "required": ["schema", "policyName", "policyVersion", "requiredEvidence", "thresholds", "allowedRegimes", "determinismRequirements"],
  "properties": {
    "schema": {
      "type": "object",
      "additionalProperties": false,
      "required": ["kind", "version"],
      "properties": {
        "kind": {"const": "helix.enzyme.policy"},
        "version": {"type": "integer", "const": 1}
      }
    },
    "policyName": {"type": "string", "minLength": 1},
    "policyVersion": {"type": "string", "minLength": 1},
    "requiredEvidence": {"type": "array", "minItems": 1, "items": {"type": "string", "minLength": 1}},
    "thresholds": {"type": "object", "additionalProperties": true},
    "allowedRegimes": {"type": "array", "minItems": 1, "items": {"type": "string", "minLength": 1}},
    "determinismRequirements": {
      "type": "object",
      "additionalProperties": {
        "type": "array",
        "items": {"type": "string", "enum": ["D0", "D1", "D2"]},
        "minItems": 1
      }
    },
    "safetyGates": {"type": "object", "additionalProperties": true}
  }
}
