{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://omniscoder.github.io/Helix/schemas/proof_kit/replay_receipt_v1.schema.json",
  "title": "Helix Proof Kit Replay Receipt v1",
  "description": "Canonical receipt for `helix replay`: binds the runner (immutable image digest) and exported artifacts by sha256 + size.",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "schema",
    "receipt_version",
    "schema_hash",
    "created_at_utc",
    "hash",
    "runner",
    "helix_version",
    "git_sha",
    "session_id",
    "run_id",
    "run_ids",
    "contract",
    "artifacts"
  ],
  "properties": {
    "schema": {
      "type": "string",
      "const": "helix.proof_kit.replay_receipt.v1"
    },
    "receipt_version": {
      "type": "string",
      "const": "v1"
    },
    "schema_hash": {
      "type": "string",
      "pattern": "^sha256:[0-9a-f]{64}$"
    },
    "created_at_utc": {
      "type": "string",
      "format": "date-time"
    },
    "hash": {
      "type": "object",
      "additionalProperties": false,
      "required": ["algorithm", "encoding", "prefix"],
      "properties": {
        "algorithm": {"type": "string", "const": "sha256"},
        "encoding": {"type": "string", "const": "hex"},
        "prefix": {"type": "string", "const": "sha256:"}
      }
    },
    "runner": {
      "type": "object",
      "additionalProperties": false,
      "required": ["image", "image_digest"],
      "properties": {
        "image": {"type": "string", "minLength": 1},
        "image_digest": {"type": "string", "pattern": "^sha256:[0-9a-f]{64}$"}
      }
    },
    "helix_version": {"type": "string", "minLength": 1},
    "git_sha": {"type": "string", "pattern": "^[0-9a-f]{0,64}$"},
    "session_id": {"type": ["string", "null"]},
    "run_id": {"type": ["string", "null"]},
    "run_ids": {
      "type": "array",
      "items": {"type": "string", "minLength": 1},
      "minItems": 1
    },
    "contract": {
      "type": "object",
      "additionalProperties": false,
      "required": ["policyHash", "semanticHash", "determinismClass", "contractId", "contractHash"],
      "properties": {
        "policyHash": {"type": ["string", "null"]},
        "semanticHash": {"type": ["string", "null"]},
        "determinismClass": {"type": ["string", "null"]},
        "contractId": {"type": ["string", "null"]},
        "contractHash": {"type": ["string", "null"]}
      }
    },
    "artifacts": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["path", "sha256", "size"],
        "properties": {
          "path": {"type": "string", "minLength": 1},
          "sha256": {"type": "string", "pattern": "^sha256:[0-9a-f]{64}$"},
          "size": {"type": "integer", "minimum": 0}
        }
      }
    }
  }
}
